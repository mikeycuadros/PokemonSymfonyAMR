{% extends 'base.html.twig' %}

{% block title %}Pokédex{% endblock %}

{% block body %}
<style>
    body {
        background-color: #ffcb05; /* Amarillo Pokémon */
        font-family: 'Roboto', sans-serif;
        display: flex;
        justify-content: center;
        align-items: flex-start;
        height: 99vh;
        margin: 0;
        flex-direction: column;
        padding-top: 1vh;
        color: #333;
    }

    .example-wrapper {
        background-color: #fff;
        padding: 2rem;
        border-radius: 16px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
        text-align: center;
        border: 4px solid #3d7dca; /* Azul Pokémon */
        width: 100%;
        height:70%;
        max-width: 900px;
        margin: 0 auto 1rem auto;
        box-sizing: border-box;
        overflow: hidden;
    }

    .table-container {
        width: 100%;
        overflow-x: auto; /* Para que la tabla sea responsive */
        margin-top: 20px; /* Espacio entre el logo y la tabla */
        height: 85%;
    }

    .table {
        width: 100%;
        table-layout: fixed;
        border-collapse: collapse;
        margin-top: 1.5rem;
    }

    .table th, .table td {
        padding: 15px;
        border-bottom: 1px solid #ddd;
        text-align: center;
        font-size: 1.1rem;
        word-wrap: break-word;
        border-bottom: 2px solid #3d7dca; /* Azul Pokémon */

    }

    .table th {
        background-color: #3d7dca; /* Azul Pokémon */
        color: #fff;
        font-weight: bold;
        text-transform: uppercase;
        font-size: 1.2rem;
        letter-spacing: 1px;
    }

    .btn {
        padding: 12px 24px;
        font-size: 1rem;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        transition: background-color 0.3s ease, transform 0.3s ease;
        font-weight: bold;
        margin: 0; /* Espaciado entre botones */
    }

    .btn-success {
        background-color: #28a745; /* Verde */
        color: #fff;
    }

    .btn-success:hover {
        background-color: #218838; /* Verde oscuro */
        transform: translateY(-3px);
    }

    h1 {
        color: #3d7dca; /* Azul Pokémon */
        font-size: 2.5rem;
        margin-bottom: 1.5rem;
    }

    .no-records {
        color: #777;
        font-style: italic;
        text-align: center;
    }

    .logo {
        display: block;
        margin: 0 auto 1rem; /* Centrado con margen inferior */
        width: 300px; /* Tamaño del logo */
    }

    .alert {
        padding: 15px;
        margin-bottom: 3px;
        border-radius: 5px;
        font-size: 1rem;
        text-align: center;
    }

    .alert-success {
        background-color: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
    }

    .alert-error {
        background-color: #f8d7da;
        color: #721c24;
        border: 1px solid #f5c6cb;
    }

    .alert-info {
        background-color: #d1ecf1;
        color: #0c5460;
        border: 1px solid #bee5eb;
    }

    .alert-warning {
        background-color: #fff3cd;
        color: #856404;
        border: 1px solid #ffeeba;
    }

    @media (max-width: 768px) {
        body {
            padding-top: 2vh;
        }

        .example-wrapper {
            padding: 1.5rem;
        }

        .logo {
            width: 250px; /* Reducir tamaño del logo en móviles */
        }

        h1 {
            font-size: 2rem; /* Reducir tamaño del título en móviles */
        }

        .btn {
            width: 100%; /* Botones de ancho completo en móviles */
            margin: 0.5rem 0; /* Espaciado vertical entre botones */
        }
    }
    img{
        width: 100px;
    }
</style>

<img src="{{ asset('images/logo.png') }}" alt="Logo" class="logo">

<div class="example-wrapper">
    <h1>Pokédex</h1>

        {% for type, messages in app.flashes %}
        {% for message in messages %}
        <div class="alert alert-{{ type }}">
            {{ message }}
        </div>
        {% endfor %}
    {% endfor %}

 <div class="table-container">
 <table class="table">
        <thead>
            <tr>
                <th></th>
                <th>Pokémon</th>
                <th>Nivel</th>
                <th>Fuerza</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for pokedex in pokedexes %}
            <tr>
                <td class="img"><img src="{{ asset('uploads/' ~ pokedex.pokemon.image) }}" alt="{{ pokedex.pokemon.name }}"></td>
                <td>{{ pokedex.pokemon.name }}</td>
                <td>{{ pokedex.level }}</td>
                <td>{{ pokedex.strength }}</td>
                <td>
                    {% if pokedex.state == 1 %}
                        <form action="{{ path('app_train_pokemon', {'id': pokedex.id}) }}" method="POST" class="d-inline">
                            <button type="submit" class="btn btn-success">Entrenar</button>
                        </form>
                    {% endif %}

                    {% if pokedex.level % 10 == 0 and pokedex.lastEvolutionLevel != pokedex.level %}
                        <form action="{{ path('app_pokedex_evolve', {'id': pokedex.id}) }}" method="POST" class="d-inline">
                            <button type="submit" class="btn btn-success">Evolucionar</button>
                        </form>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4" class="no-records">No se encontraron registros</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

</div>
{% endblock %}