{% extends 'base.html.twig' %}

{% block title %}Pokedex index{% endblock %}

{% block body %}
<style>
    body {
        background-color: #f0f0f0;
        font-family: 'Arial', sans-serif;
        color: #333;
        text-align: center;
        padding: 20px;
    }

    h1 {
        color:rgb(0, 81, 255);
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
        font-size: 2.5em;
        margin-bottom: 20px;
    }

    .table {
        width: 100%;
        max-width: 800px;
        margin: 0 auto;
        background-color: #fff;
        border-collapse: collapse;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .table th, .table td {
        padding: 12px;
        border-bottom: 1px solid #ddd;
    }

    .table th {
        background-color: #ff3333;
        color: #fff;
        font-size: 1.2em;
    }

    .table td {
        color: #555;
    }

    .table tr:hover {
        background-color: #f5f5f5;
    }

    .btn {
        padding: 8px 16px;
        font-size: 0.9em;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    .btn-success {
        background-color: #28a745;
        color: #fff;
    }

    .btn-success:hover {
        background-color: #218838;
    }

    .alert {
        padding: 15px;
        margin: 20px auto;
        max-width: 800px;
        border-radius: 5px;
        font-size: 1em;
    }

    .alert-success {
        background-color: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
    }

    .alert-error {
        background-color: #f8d7da;
        color: #721c24;
        border: 1px solid #f5c6cb;
    }

    .alert-info {
        background-color: #d1ecf1;
        color: #0c5460;
        border: 1px solid #bee5eb;
    }

    .alert-warning {
        background-color: #fff3cd;
        color: #856404;
        border: 1px solid #ffeeba;
    }

    .no-records {
        color: #777;
        font-style: italic;
    }
</style>

<div class="example-wrapper">
    <h1>Pokédex</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Pokémon</th>
                <th>Nivel</th>
                <th>Fuerza</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for pokedex in pokedexes %}
            <tr>
                <td>{{ pokedex.pokemon.name }}</td>
                <td>{{ pokedex.level }}</td>
                <td>{{ pokedex.strength }}</td>
                {% if (pokedex.pokemon.state == 1) %}
                <td>
                    <form action="{{ path('app_train_pokemon', {'id': pokedex.id}) }}" method="POST">
                        <button type="submit">Entrenar</button>
                    </form>
                </td>
                <td>
                    {% if pokedex.level % 10 == 0  and pokedex.lastEvolutionLevel != pokedex.level %}
                        <form action="{{ path('app_pokedex_evolve', {'id': pokedex.id}) }}" method="POST">
                            <button type="submit">Evolucionar</button>
                        </form>
                    {% endif %}
                </td>
                {# <td>
                    <a href="{{ path('app_pokedex_show', {'id': pokedex.id}) }}">show</a>
                    <a href="{{ path('app_pokedex_edit', {'id': pokedex.id}) }}">edit</a>
                </td> #}
            </tr>
        {% else %}
            <tr>
                <td colspan="4" class="no-records">No se encontraron registros</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% for type, messages in app.flashes %}
        {% for message in messages %}
        <div class="alert alert-{{ type }}">
            {{ message }}
        </div>
        {% endfor %}
    {% endfor %}
</div>
{% endblock %}