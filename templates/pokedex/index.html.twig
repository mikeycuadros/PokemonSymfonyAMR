{% extends 'base.html.twig' %}

{% block title %}Pokédex{% endblock %}

{% block body %}
<style>
    body {
        background-color: #ffcb05; /* Amarillo Pokémon */
        font-family: 'Roboto', sans-serif;
        display: flex;
        justify-content: center;
        align-items: flex-start;
        height: 99vh;
        margin: 0;
        flex-direction: column;
        padding-top: 1vh;
        color: #333;
    }

    .example-wrapper {
        background-color: #fff;
        padding: 1rem; /* Padding más pequeño */
        border-radius: 12px; /* Bordes más pequeños */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Sombra más pequeña */
        text-align: center;
        border: 3px solid #3d7dca; /* Azul Pokémon */
        width: 95%; /* Ancho relativo */
        max-width: 800px; /* Ancho máximo reducido */
        margin: 0 auto 1rem auto;
        box-sizing: border-box;
        overflow: hidden;
    }

    .table-container {
        width: 100%;
        overflow-x: auto; /* Para que la tabla sea responsive */
        margin-top: 10px; /* Espacio más pequeño */
        height: 80%; /* Altura reducida */
    }

    .table {
        width: 100%;
        table-layout: fixed;
        border-collapse: collapse;
        margin-top: 1rem; /* Margen más pequeño */
    }

    .table th, .table td {
        padding: 10px; /* Padding más pequeño */
        border-bottom: 1px solid #ddd;
        text-align: center;
        font-size: 0.9rem; /* Tamaño de fuente más pequeño */
        word-wrap: break-word;
        border-bottom: 2px solid #3d7dca; /* Azul Pokémon */
    }

    .table th {
        background-color: #3d7dca; /* Azul Pokémon */
        color: #fff;
        font-weight: bold;
        text-transform: uppercase;
        font-size: 1rem; /* Tamaño de fuente más pequeño */
        letter-spacing: 0.5px; /* Menor espaciado */
    }

    .btn {
        padding: 8px 16px; /* Padding más pequeño */
        font-size: 0.9rem; /* Tamaño de fuente más pequeño */
        border: none;
        border-radius: 6px; /* Bordes más pequeños */
        cursor: pointer;
        transition: background-color 0.3s ease, transform 0.3s ease;
        font-weight: bold;
        margin: 0; /* Espaciado entre botones */
    }

    .btn-success {
        background-color: #28a745; /* Verde */
        color: #fff;
    }

    .btn-success:hover {
        background-color: #218838; /* Verde oscuro */
        transform: translateY(-2px); /* Efecto más pequeño */
    }

    h1 {
        color: #3d7dca; /* Azul Pokémon */
        font-size: 2rem; /* Tamaño de fuente más pequeño */
        margin-bottom: 1rem; /* Margen más pequeño */
    }

    .no-records {
        color: #777;
        font-style: italic;
        text-align: center;
    }

    .logo {
        display: block;
        margin: 0 auto 0.5rem; /* Margen más pequeño */
        width: 200px; /* Tamaño del logo reducido */
    }

    .alert {
        padding: 10px; /* Padding más pequeño */
        margin-bottom: 2px; /* Margen más pequeño */
        border-radius: 4px; /* Bordes más pequeños */
        font-size: 0.9rem; /* Tamaño de fuente más pequeño */
        text-align: center;
    }

    .alert-success {
        background-color: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
    }

    .alert-error {
        background-color: #f8d7da;
        color: #721c24;
        border: 1px solid #f5c6cb;
    }

    .alert-info {
        background-color: #d1ecf1;
        color: #0c5460;
        border: 1px solid #bee5eb;
    }

    .alert-warning {
        background-color: #fff3cd;
        color: #856404;
        border: 1px solid #ffeeba;
    }

    img {
        width: 80px; /* Tamaño de imagen reducido */
    }

    /* Media queries para responsividad */
    @media (max-width: 768px) {
        body {
            padding-top: 1vh;
        }

        .example-wrapper {
            padding: 0.75rem; /* Padding más pequeño en móviles */
        }

        .logo {
            width: 150px; /* Tamaño del logo más pequeño en móviles */
        }

        h1 {
            font-size: 1.5rem; /* Tamaño de fuente más pequeño en móviles */
        }

        .btn {
            width: 100%; /* Botones de ancho completo en móviles */
            margin: 0.25rem 0; /* Espaciado vertical más pequeño */
            font-size: 0.8rem; /* Tamaño de fuente más pequeño en móviles */
        }

        .table th, .table td {
            padding: 8px; /* Padding más pequeño en móviles */
            font-size: 0.8rem; /* Tamaño de fuente más pequeño en móviles */
        }

        img {
            width: 60px; /* Tamaño de imagen más pequeño en móviles */
        }
    }
</style>

<img src="{{ asset('images/logo.png') }}" alt="Logo" class="logo">

<div class="example-wrapper">
    <h1>Pokédex</h1>

    {% for type, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ type }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    <div class="table-container">
        <table class="table">
            <thead>
                <tr>
                    <th></th>
                    <th>Pokémon</th>
                    <th>Nivel</th>
                    <th>Fuerza</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                {% for pokedex in pokedexes %}
                    <tr>
                        <td class="img"><img src="{{ asset('uploads/' ~ pokedex.pokemon.image) }}" alt="{{ pokedex.pokemon.name }}"></td>
                        <td>{{ pokedex.pokemon.name }}</td>
                        <td>{{ pokedex.level }}</td>
                        <td>{{ pokedex.strength }}</td>
                        <td>
                            {% if pokedex.state == 1 %}
                                <form action="{{ path('app_train_pokemon', {'id': pokedex.id}) }}" method="POST" class="d-inline">
                                    <button type="submit" class="btn btn-success">Entrenar</button>
                                </form>
                                {% if pokedex.level % 10 == 0 and pokedex.lastEvolutionLevel != pokedex.level %}
                                    <form action="{{ path('app_pokedex_evolve', {'id': pokedex.id}) }}" method="POST" class="d-inline">
                                        <button type="submit" class="btn btn-success">Evolucionar</button>
                                    </form>
                                {% endif %}
                            {% else %}
                                <form action="{{ path('app_pokedex_revive', {'id': pokedex.id}) }}" method="POST">
                                    <button type="submit" class="btn btn-success">Revivir</button>
                                </form>
                            {% endif %}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="no-records">No se encontraron registros</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}