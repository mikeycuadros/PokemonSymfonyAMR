{% extends 'base.html.twig' %}

{% block title %}Hazte con todos!{% endblock %}

{% block body %}
<style>
    body {
        background-color: #ffcb05; /* Amarillo Pokémon */
        font-family: Arial, sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 50%;
        margin: 0;
        padding-top: 20vh;
        flex-direction: column;
    }

    .pokemon-container {
        background-color: #ffffff;
        padding: 2rem;
        border-radius: 15px;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.3);
        text-align: center;
        border: 5px solid #3d7dca; /* Azul Pokémon */
        width: 100%;
        max-width: 600px;
        transition: transform 0.3s ease;
    }

    .pokemon-container:hover {
        transform: scale(1.02);
    }

    h1 {
        color: #3d7dca; /* Azul Pokémon */
        font-size: 2rem;
        margin-bottom: 1.2rem;
    }

    p {
        font-size: 1.2rem;
        color: #555;
        margin-bottom: 20px;
    }

    .btn {
        display: inline-block;
        margin: 10px;
        padding: 10px 20px;
        font-size: 1rem;
        color: #ffffff;
        background-color: #3d7dca; /* Azul Pokémon */
        border-radius: 5px;
        text-decoration: none;
        transition: background-color 0.3s ease, transform 0.2s;
        border: none;
        cursor: pointer;
    }

    .btn:hover {
        background-color: #ffcb05; /* Amarillo Pokémon */
        color: #3d7dca;
        transform: scale(1.05);
    }

    .no-pokemon {
        color: #777;
        font-style: italic;
    }

    @keyframes pulse {
        0%, 100% {
            transform: scale(1);
        }
        50% {
            transform: scale(1.1);
        }
    }

    .logo {
        width: 350px;
        margin-bottom: 2rem;
        animation: pulse 1.5s ease-in-out infinite;
    }

    .img{
        width: 100px;
        height: 100px;
    }

    /* Estilos para los mensajes de alerta */
    .alert {
        padding: 15px;
        margin-bottom: 20px;
        border: 1px solid transparent;
        border-radius: 4px;
        font-size: 1rem;
        text-align: center;
        animation: fadeIn 0.5s ease-in-out;
    }

    .alert-success {
        background-color: #d4edda;
        border-color: #c3e6cb;
        color: #155724;
    }

    .alert-error {
        background-color: #f8d7da;
        border-color: #f5c6cb;
        color: #721c24;
    }

    .alert-warning {
        background-color: #fff3cd;
        border-color: #ffeeba;
        color: #856404;
    }

    .alert-info {
        background-color: #d1ecf1;
        border-color: #bee5eb;
        color: #0c5460;
    }

    @keyframes fadeIn {
        from {
            opacity: 0;
        }
        to {
            opacity: 1;
        }
    }
</style>

<img src="{{ asset('images/logo.png') }}" alt="Logo" class="logo">

<div class="pokemon-container">
    {% if pokemon %}
        <h1>¡Un {{ pokemon.name }} salvaje apareció!</h1>
        <img src="{{ asset('uploads/' ~ pokemon.image) }}" alt="{{ pokemon.name }}" class="img">
        <form action="{{ path('app_capture_pokemon', {'id': pokemon.id}) }}" method="POST">
            <button type="submit" class="btn">¡Lanzar Pokéball!</button>
        </form>
        <a href="{{ path('app_main') }}" class="btn">Dejarlo escapar</a>
    {% else %}
        <p class="no-pokemon">No hay Pokémon disponibles para cazar.</p>
        <a href="{{ path('app_main') }}" class="btn">Volver al inicio</a>
    {% endif %}

    {% for type, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ type }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
</div>
{% endblock %}