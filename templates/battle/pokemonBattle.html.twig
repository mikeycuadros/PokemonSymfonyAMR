{% extends 'base.html.twig' %}

{% block title %}Battle{% endblock %}

{% block body %}
<style>
    body {
        background-color: #ffcb05; /* Amarillo Pokémon */
        font-family: 'Arial', sans-serif; /* Fuente moderna */
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
        flex-direction: column; /* Para alinear el logo arriba del contenido */
    }

    .logo {
        width: 250px; /* Ajusta el tamaño del logo según sea necesario */
        animation: pulse 1.5s ease-in-out infinite; /* Animación de "pulso" */
    }

    @keyframes pulse {
        0%, 100% {
            transform: scale(1); /* Tamaño normal */
        }
        50% {
            transform: scale(1.1); /* Tamaño un 10% más grande */
        }
    }

    h2, h3 {
        color: #3d7dca; /* Azul Pokémon */
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
        margin-bottom: 20px;
    }

    h2 {
        font-size: 1.5em; /* Tamaño de fuente más pequeño */
    }

    h3 {
        font-size: 1.2em; /* Tamaño de fuente más pequeño */
    }

    .battle-container {
        background-color: #ffffff; /* Fondo blanco */
        padding: 1rem; /* Padding más pequeño */
        border-radius: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        text-align: center;
        border: 5px solid #3d7dca; /* Azul Pokémon */
        width: 90%; /* Ancho relativo */
        max-width: 800px; /* Ancho máximo del contenedor */
        margin: 1rem; /* Margen para evitar que toque los bordes */
    }

    table {
        width: 100%;
        margin: 10px 0; /* Margen más pequeño */
        border-collapse: collapse;
        background-color: #f9f9f9;
        border-radius: 10px;
        overflow: hidden;
    }

    th, td {
        padding: 8px; /* Padding más pequeño */
        border: 1px solid #ddd;
    }

    th {
        background-color: #3d7dca; /* Azul Pokémon */
        color: #fff;
        font-size: 1em; /* Tamaño de fuente más pequeño */
    }

    td {
        color: #555;
        font-size: 0.9em; /* Tamaño de fuente más pequeño */
    }

    .winner-message {
        font-size: 1em; /* Tamaño de fuente más pequeño */
        font-weight: bold;
        margin-top: 10px; /* Margen más pequeño */
        padding: 5px;
        border-radius: 5px;
    }

    .button-container {
        display: flex;
        justify-content: center; /* Centra los botones */
        gap: 10px; /* Espaciado entre botones */
        margin-top: 10px; /* Margen más pequeño */
    }

    .winner-message.win {
        background-color: #d4edda; /* Verde claro */
        color: #28a745; /* Verde oscuro */
        border: 1px solid #c3e6cb;
    }

    .winner-message.lose {
        background-color: #f8d7da; /* Rojo claro */
        color: #dc3545; /* Rojo oscuro */
        border: 1px solid #f5c6cb;
    }

    .pokemon-section {
        margin-bottom: 20px; /* Margen más pequeño */
    }

    .pokemon-section h3 {
        margin-bottom: 5px; /* Margen más pequeño */
    }

    .btn {
        background-color: #3d7dca; /* Azul Pokémon */
        color: #ffffff;
        border: none;
        padding: 0.5rem 1rem; /* Padding más pequeño */
        font-size: 0.9em; /* Tamaño de fuente más pequeño */
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
        margin: 0.25rem; /* Margen más pequeño */
    }

    .btn:hover {
        background-color: #ffcb05; /* Amarillo Pokémon */
        color: #3d7dca; /* Azul Pokémon */
    }

    a {
        color: #3d7dca; /* Azul Pokémon */
        text-decoration: none;
        margin: 0.25rem; /* Margen más pequeño */
        font-size: 0.9em; /* Tamaño de fuente más pequeño */
    }

    a:hover {
        color: #ffcb05; /* Amarillo Pokémon */
    }

    img {
        width: 80px; /* Tamaño más pequeño */
        height: 80px; /* Tamaño más pequeño */
    }

    /* Media queries para responsividad */
    @media (max-width: 768px) {
        .battle-container {
            padding: 0.5rem; /* Padding más pequeño en pantallas pequeñas */
        }

        h2 {
            font-size: 1.2em; /* Tamaño de fuente más pequeño en pantallas pequeñas */
        }

        h3 {
            font-size: 1em; /* Tamaño de fuente más pequeño en pantallas pequeñas */
        }

        .btn {
            padding: 0.4rem 0.8rem; /* Padding más pequeño en pantallas pequeñas */
            font-size: 0.8em; /* Tamaño de fuente más pequeño en pantallas pequeñas */
        }

        img {
            width: 60px; /* Tamaño más pequeño en pantallas pequeñas */
            height: 60px; /* Tamaño más pequeño en pantallas pequeñas */
        }
    }
</style>

<div class="battle-container">
    <!-- Logo añadido aquí -->
    {# <img src="{{ asset('images/logo.png') }}" alt="Logo" class="logo"> #}

    <h2>¡Empecemos con la batalla!</h2>

    <div class="pokemon-section">
        <h3>Tu Pokémon:</h3>
        <table>
            <thead>
                <tr>
                    <th></th>
                    <th>Pokémon</th>
                    <th>Nivel</th>
                    <th>Fuerza</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                    <img src="{{ asset('uploads/' ~ pokedex.pokemon.image) }}" alt="{{ pokedex.pokemon.name }}" class="pokemon-image">
                    </td>
                    <td>{{ pokedex.pokemon.name }}</td>
                    <td>{{ pokedex.level }}</td>
                    <td>{{ pokedex.strength }}</td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="pokemon-section">
        <h3>Pokémon contrincante:</h3>
        <table>
            <thead>
                <tr>
                    <th></th>
                    <th>Pokémon</th>
                    <th>Nivel</th>
                    <th>Fuerza</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                    <img src="{{ asset('uploads/' ~ enemy.image) }}" alt="{{ enemy.name }}" class="pokemon-image">
                    </td>
                    <td>{{ enemy.name }}</td>
                    <td>{{ enemy_level }}</td>
                    <td>{{ enemy_strength }}</td>
                </tr>
            </tbody>
        </table>
    </div>

    <h3>Ganador:</h3>

    {% if (winner == 1) %}
        <div class="winner-message win">
            <p>¡Has ganado la batalla!</p>
        </div>
        <div class="button-container">
        <form action="{{ path('app_battle_levelUp', {'id': pokedex.id}) }}" method="GET" class="d-inline">
            <button type="submit" class="btn">Subir de nivel</button>
        </form>
        <form action="{{ path('app_pokedex_index') }}" method="GET" class="d-inline">
            <button type="submit" class="btn">Resucitar pokémons</button>
        </form>
        <form action="{{ path('app_capture_pokemon', {'id': enemy.id}) }}" method="POST" class="d-inline">
            <button type="submit" class="btn">Capturar</button>
        </form>
        </div>

        {% if (pokedex.level % 10 == 0) %}
            <p>¡Puedes evolucionar a tu Pokémon!</p>
        {% endif %}
    {% else %}
        <div class="winner-message lose">
            <p>¡Has perdido la batalla!</p>
            <p>Tu Pokémon ha quedado malherido.</p>
        </div>
    {% endif %}

    <div>
        <a href="{{ path('app_main') }}">Volver al inicio</a>
        <a href="{{ path('app_pokedex_index') }}">Ir a Pokédex</a>
        <a href="{{ path('app_battle_view') }}">Volver a luchar</a>
    </div>
</div>
{% endblock %}