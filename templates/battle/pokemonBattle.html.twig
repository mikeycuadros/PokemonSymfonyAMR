{% extends 'base.html.twig' %}

{% block title %}Battle{% endblock %}

{% block body %}
<style>
    body {
        background-color: #f0f0f0;
        font-family: 'Arial', sans-serif;
        color: #333;
        text-align: center;
        padding: 20px;
    }

    .logo {
        max-width: 200px; /* Ajusta el tamaño del logo según sea necesario */
        height: auto;
        margin-bottom: 20px;
    }

    h2, h3 {
        color: #ff3333;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
        margin-bottom: 20px;
    }

    h2 {
        font-size: 2em;
    }

    h3 {
        font-size: 1.5em;
    }

    .battle-container {
        background-color: #fff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        max-width: 800px;
        margin: 0 auto;
    }

    table {
        width: 100%;
        margin: 20px 0;
        border-collapse: collapse;
        background-color: #f9f9f9;
        border-radius: 10px;
        overflow: hidden;
    }

    th, td {
        padding: 12px;
        border: 1px solid #ddd;
    }

    th {
        background-color: #ff3333;
        color: #fff;
        font-size: 1.1em;
    }

    td {
        color: #555;
    }

    .winner-message {
        font-size: 1.2em;
        font-weight: bold;
        margin-top: 20px;
        padding: 10px;
        border-radius: 5px;
    }

    .winner-message.win {
        background-color: #d4edda;
        color: #28a745;
        border: 1px solid #c3e6cb;
    }

    .winner-message.lose {
        background-color: #f8d7da;
        color: #dc3545;
        border: 1px solid #f5c6cb;
    }

    .pokemon-section {
        margin-bottom: 30px;
    }

    .pokemon-section h3 {
        margin-bottom: 10px;
    }
</style>

<div class="battle-container">
    <!-- Logo añadido aquí -->
    <img src="{{ asset('images/logo.png') }}" alt="Logo" class="logo">

    <h2>¿Ya has elegido tu Pokémon?</h2>
    <h2>¡Empecemos con la batalla!</h2>

    <div class="pokemon-section">
        <h3>Tu Pokémon:</h3>
        <table>
            <thead>
                <tr>
                    <th>Pokémon</th>
                    <th>Nivel</th>
                    <th>Fuerza</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>{{ pokedex.pokemon.name }}</td>
                    <td>{{ pokedex.level }}</td>
                    <td>{{ pokedex.strength }}</td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="pokemon-section">
        <h3>Pokémon contrincante:</h3>
        <table>
            <thead>
                <tr>
                    <th>Pokémon</th>
                    <th>Nivel</th>
                    <th>Fuerza</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>{{ enemy.name }}</td>
                    <td>{{ enemy_level }}</td>
                    <td>{{ enemy_strength }}</td>
                </tr>
            </tbody>
        </table>
    </div>

    <h3>Ganador:</h3>

    {% if (winner == 1) %}

    <p>Has ganado la batalla!</p><br/>
    <form action="{{ path('app_battle_levelUp', {'id': pokedex.id}) }}" method="GET" class="d-inline">
        <button type="submit" class="btn btn-success btn-sm">Subir de nivel</button>
    </form>

    <form action="{{ path('app_pokedex_index') }}" method="GET" class="d-inline">
        <button type="submit" class="btn btn-success btn-sm">Resucitar pokemons</button>
    </form>
    <form action="{{ path('app_capture_pokemon', {'id': enemy.id}) }}" method="POST" class="d-inline">
        <button type="submit" class="btn btn-success btn-sm">Capturar</button>
    </form>


        {% if (pokedex.level % 10 == 0) %}

        <p>Puedes evolucionar a tu pokemon!</p>

        {% endif %}


    {% else %}

    <p>Has perdido la batalla!</p><br>
    <p>Tu pokemon ha quedado malherido</p>

    {% endif %}


    <a href="{{ path('app_main') }}">Volver al inicio</a>
    <a href="{{ path('app_pokedex_index') }}">Ir a Pokedex</a>
    <a href= "{{ path('app_battle_view') }}">Volver a luchar</a>



    
{% endblock %}