{% extends 'base.html.twig' %}

{% block title %}Fight{% endblock %}

{% block body %}
<style>
    body {
        background-color: #f0f0f0;
        font-family: 'Arial', sans-serif;
        color: #333;
        text-align: center;
        padding: 20px;
    }

    h3 {
        color: #ff3333;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
        font-size: 1.8em;
        margin-bottom: 10px;
    }

    h2 {
        color: #555;
        font-size: 1.5em;
        margin-bottom: 20px;
    }

    .table {
        width: 100%;
        max-width: 800px;
        margin: 0 auto;
        background-color: #fff;
        border-collapse: collapse;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .table th, .table td {
        padding: 12px;
        border-bottom: 1px solid #ddd;
    }

    .table th {
        background-color: #ff3333;
        color: #fff;
        font-size: 1.2em;
    }

    .table td {
        color: #555;
    }

    .table tr:hover {
        background-color: #f5f5f5;
    }

    .btn {
        padding: 8px 16px;
        font-size: 0.9em;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    .btn-success {
        background-color: #28a745;
        color: #fff;
    }

    .btn-success:hover {
        background-color: #218838;
    }

    .no-records {
        color: #777;
        font-style: italic;
    }
</style>

<div class="example-wrapper">
    <h3>Parece que tienes una batalla pendiente...</h3>
    <h2>Elige tu Pokémon:</h2>

    <table class="table">
        <thead>
            <tr>
                <th>Pokémon</th>
                <th>Nivel</th>
                <th>Fuerza</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for pokedex in pokedexes %}
            <tr>
                <td>{{ pokedex.pokemon.name }}</td>
                <td>{{ pokedex.level }}</td>
                <td>{{ pokedex.strength }}</td>
                {% if (pokedex.state == 1) %}
                <td>
                    <form action="{{ path('app_battle_pokemon', {'id': pokedex.id}) }}" method="GET" class="d-inline">
                        <button type="submit" class="btn btn-success">Elegir</button>
                    </form>
                </td>
                {% endif %}
                {# <td>
                    <a href="{{ path('app_pokedex_show', {'id': pokedex.id}) }}">show</a>
                    <a href="{{ path('app_pokedex_edit', {'id': pokedex.id}) }}">edit</a>
                </td> #}
            </tr>
        {% else %}
            <tr>
                <td colspan="4" class="no-records">No se encontraron registros</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}